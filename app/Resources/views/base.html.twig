<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block pageTitle %}PartyPlanner{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        {% endblock %}
    </head>
    <body>
        <!-- Nav -->
        <nav class="navbar navbar-inverse navbar-default navbar-static-top navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li {% if app.request.attributes.get('_route') == 'home' %}class="nav-item"{% endif %}>
                    <a href="{{ path('home') }}" class="nav-link active">Home</a>
                </li>
                {% if app.user %}
                    <li {% if app.request.attributes.get('_route') == 'profile' %}class="nav-item"{% endif %}>
                        <a href="{{ path('profile', {'id' : app.user.id}) }}" class="nav-link active">Profile</a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'signout' %}class="active"{% endif %}>
                        <a href="{{ path('signout') }}" class="nav-link active">Sign out</a>
                    </li>
                {% else %}
                    <li {% if app.request.attributes.get('_route') == 'signin' %}class="active"{% endif %}>
                        <a href="{{ path('signin') }}" class="nav-link active">Sign in</a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'signup' %}class="active"{% endif %}>
                        <a href="{{ path('signup') }}" class="nav-link active">Sign up</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
                        <div class="dropdown-menu">
                            <ul>
                                <li><a class="dropdown-item" href="{{ path('admin_users') }}">Manage users</a></li>
                            </ul>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <!-- Content -->
        <h1>{% block title %}{% endblock %}</h1>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    {% block body %}
                    <div id="flash">
                        {% block flash %}
                        {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('warning') %}
                        <div class="alert alert-warning">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}
                        {% endblock %}
                    </div>
                    {% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
