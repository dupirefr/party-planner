{% extends 'base.html.twig' %}

{% block pageTitle %}Manage users - {{ parent() }}{% endblock %}

{% block title %}Manage users{% endblock %}

{% block body %}
    {{ parent() }}
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Birth date</th>
        </tr>

        {% for user in users %}
            <tr onclick="document.location = '{{ path('profile', {'id': user.id}) }}';" style="cursor: pointer">
                <td>{{ user.id|e }}</td>
                <td>{{ user.username|e }}</td>
                <td>{{ user.firstName|e }}</td>
                <td>{{ user.lastName|e }}</td>
                <td>{{ user.email|e }}</td>
                <td>{{ user.birthDate|date('d-m-Y')|e }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
